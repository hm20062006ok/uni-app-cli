{
  "easycom": {
    "autoscan": true,
    "custom": {
      "xjyp-(.*)": "@/components/xjyp/xjyp-$1/xjyp-$1.vue",
      "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "湘济优品",
        "navigationBarTextStyle": "white",
        "app-plus": {
          "enablePullDownRefresh": false,
          "pullToRefresh": {
            "support": false,
            "color": "#FF00FF",
            "style": "circle",
            "offset": "48px",
            "contentover": {
              "caption": "刷新完成"
            },
            "contentrefresh": {
              "caption": "正在刷新"
            }
          }
        }
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom"
      }
    },

    {
      "path": "pages/shop/GoodsClass/index"
    },
    {
      "path": "pages/shop/index"
    },
    {
      "path": "pages/user/MyOrder/index"
    },
    {
      "path": "pages/shop/GoodDetails/index"
    },
    {
      "path": "pages/user/MyTeam/index"
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "湘济优品",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#F7F7F7",
    "navigationStyle": "default",
    "backgroundColorBottom": "#F7F7F7",
    "animationType": "slide-in-right",
    "animationDuration": 300
  },
  "tabBar": {
    "color": "#a3a1b3",
    "selectedColor": "#ff6023",
    "backgroundColor": "#FFFFFF",
    "height": "50px",
    "fontSize": "10px",
    "iconWidth": "24px",
    "spacing": "3px",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/tabIcons/home-off@2x.png",
        "selectedIconPath": "static/tabIcons/home-on@2x.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/shop/GoodsClass/index",
        "iconPath": "static/tabIcons/home-off@2x.png",
        "selectedIconPath": "static/tabIcons/home-on@2x.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/shop/index",
        "iconPath": "static/tabIcons/shop-off@2x.png",
        "selectedIconPath": "static/tabIcons/shop-on@2x.png",
        "text": "购物车"
      },
      {
        "pagePath": "pages/user/index",
        "iconPath": "static/tabIcons/my-off@2x.png",
        "selectedIconPath": "static/tabIcons/my-on@2x.png",
        "text": "我的"
      }
    ]
  }
}
